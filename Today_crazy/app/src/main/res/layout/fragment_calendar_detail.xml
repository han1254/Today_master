<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nequer.android.business.detail.fragment.CalendarDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            >

            <ImageView
                android:layout_width="81dp"
                android:layout_height="47dp"
                android:src="@drawable/ic_cando"
                android:layout_marginTop="5dp"/>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/whitesmoke">
        </View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/frg_detail_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/whitesmoke">

        </View>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            >

            <ImageView
                android:layout_width="81dp"
                android:layout_height="47dp"
                android:src="@drawable/ic_cant_do"
                android:layout_marginTop="5dp"/>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/whitesmoke">

        </View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/frg_detail_bad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/whitesmoke"
            >
        </View>


        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp"
            >

            <ImageView
                android:layout_width="81dp"
                android:layout_height="47dp"
                android:src="@drawable/ic_recomend"
                android:layout_marginTop="5dp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/frg_detail_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
