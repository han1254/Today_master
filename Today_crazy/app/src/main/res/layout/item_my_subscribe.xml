<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_mysubscribe_imag"
                android:layout_width="100dp"
                android:layout_height="100dp"
               android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/item_mysubscribe_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_mysubscribe_imag"
                android:layout_alignTop="@+id/item_mysubscribe_imag"
                android:layout_marginStart="40dp"
                android:text="日历标题："
                android:textColor="@color/primary_dark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/item_mysubscribe_txt_calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_mysubscribe_txt_name"
                android:layout_alignBottom="@+id/item_mysubscribe_txt_name"
                android:text="东秦老黄历"/>





            <LinearLayout
                android:layout_below="@id/item_mysubscribe_txt_calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/item_mysubscribe_txt_name"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:id="@+id/item_mysubscribe_linear_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_cancel_subscribe"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消订阅"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.v7.widget.CardView>