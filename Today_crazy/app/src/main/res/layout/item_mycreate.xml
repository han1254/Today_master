<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp"
    android:elevation="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_mycreate_imag"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/item_mycreate_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_mycreate_imag"
                android:layout_alignTop="@+id/item_mycreate_imag"
                android:layout_marginStart="20dp"
                android:text="日历标题："
                android:textColor="@color/primary_dark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/item_mycreate_txt_calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_mycreate_txt_name"
                android:layout_alignBottom="@+id/item_mycreate_txt_name"
                android:text="东秦老黄历"/>


            <TextView
                android:id="@+id/item_mycreate_txt_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_below="@id/item_mycreate_txt_name"
                android:layout_marginTop="20dp"
                android:text="订阅数："
                android:layout_alignEnd="@+id/item_mycreate_txt_name"
                android:textColor="@color/primary_dark"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/item_mycreate_txt_subscribe_number"
                android:layout_toRightOf="@+id/item_mycreate_txt_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/item_mycreate_txt_subscribe"
                android:text="0"
                />
            <LinearLayout
                android:layout_toRightOf="@id/item_mycreate_txt_calendar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

               <LinearLayout
                   android:id="@+id/item_mycreate_linear_edit"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_gravity="center_vertical"
                   android:orientation="horizontal">

                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_gravity="center_vertical"
                       android:layout_margin="10dp"
                       android:src="@drawable/ic_mycreate_edit"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="编辑"
                       android:layout_gravity="center_vertical"/>

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/item_mycreate_linear_delet"
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_gravity="center_vertical">

                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_gravity="center_vertical"
                       android:layout_margin="10dp"
                       android:src="@drawable/ic_create_delete"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="删除"
                       android:layout_gravity="center_vertical"/>
               </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>