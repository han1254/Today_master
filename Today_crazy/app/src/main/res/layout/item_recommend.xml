<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_layout_recommend"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        android:layout_marginTop="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_image_flag_recommend"
                style="@style/ImageIcon"

                android:layout_height="20dp"
                android:background="@color/green"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/item_calendar_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:layout_toRightOf="@+id/item_image_flag_recommend"
                android:text="赶紧洗澡"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="@color/primary"/>
            <TextView
                android:id="@+id/txt_calendar_recommend_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/item_calendar_recommend"
                android:layout_below="@+id/item_calendar_recommend"
                android:textColor="@color/GeneralMotorsDarkGray"
                android:text="要洗澡"
                android:textSize="14sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>